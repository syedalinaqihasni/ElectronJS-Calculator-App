{
  "name": "my-first-app",
  "version": "1.0.0",
  "description": "My First App",
  "main": "./app/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Arun",
  "license": "ISC",
  "devDependencies": {
    "electron": "^22.3.25",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.example.myfirstapp",
    "productName": "My First App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
